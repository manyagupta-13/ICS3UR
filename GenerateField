import java.awt.*;
import javax.swing.*;
import java.util.Scanner;

public class JavaApplication6 extends JFrame {

    public JavaApplication6() {
        JFrame j = new JFrame("Field");
        Scanner console = new Scanner(System.in);
        System.out.println("Enter 1, 2 or 3");
        int choice = console.nextInt();
        if (choice == 1) {
            ImageIcon field1 = new ImageIcon("C:/users/lidan/OneDrive/Documents/NetBeansProjects/JavaApplication6/src/javaapplication6/resource/field.png");
            Image gamefield = field1.getImage();
            JLabel a = new JLabel(new ImageIcon(gamefield));
            add(a);
            pack();
            
        } else if (choice == 2) {
            ImageIcon field2 = new ImageIcon("C:/users/lidan/OneDrive/Documents/NetBeansProjects/JavaApplication6/src/javaapplication6/resource/terrain.png");
            Image gamefield = field2.getImage();
            JLabel b = new JLabel(new ImageIcon(gamefield));
            add(b);
            pack();
            
        } else if (choice == 3) {
            ImageIcon field3 = new ImageIcon("C:/users/lidan/OneDrive/Documents/NetBeansProjects/JavaApplication6/src/javaapplication6/resource/field2.png");
            Image gamefield = field3.getImage();
            JLabel c = new JLabel(new ImageIcon(gamefield));
            add(c);
            pack();
            
        } else {
            System.out.print("Invalid Choice");
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(()
        -> { JavaApplication6 generateField = new JavaApplication6();
        generateField.setVisible(true);
           
        }
        );
    }
}
